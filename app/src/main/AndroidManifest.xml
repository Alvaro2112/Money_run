<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="sdp.moneyrun">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup">
        <activity android:name=".ui.game.EndGameActivity">
        </activity>
        <activity android:name=".ui.map.MapActivity">
        </activity>
        <activity android:name=".ui.weather.WeatherWidgetActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.menu.LeaderboardActivity" />

        <activity android:name=".ui.menu.MainLeaderboardActivity" />

        <activity
            android:name=".ui.authentication.SignUpActivity"
            android:theme="@style/AppTheme"
            tools:ignore="AllowBackup" />
        <activity
            android:name=".ui.menu.MenuActivity"
            android:label="@string/title_activity_menu"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".ui.MainActivity">


        </activity>
        <activity android:name=".ui.map.OfflineMapActivity">
        </activity>
        <activity android:name=".ui.map.OfflineMapDownloaderActivity"/>
        <activity
            android:name=".ui.authentication.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".ui.player.UserProfileActivity" />
        <activity
            android:name=".ui.authentication.RegisterUserActivity"
            android:label="Register Player" />
        <activity android:name=".ui.game.GameLobbyActivity" />
    </application>

</manifest>
